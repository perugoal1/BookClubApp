{
    "root": true,
    "parserOptions": {
         "ecmaVersion": 12,
          "ecmaFeatures": {
               "jsx": true
          },
         "sourceType": "module",
         "project": "./tsconfig.json"
    },
    "extends": [
          "airbnb-typescript",
          "airbnb/hooks",
          "plugin:@typescript-eslint/recommended",
          "plugin:jest/recommended",
          "plugin:prettier/recommended"
    ],
    "plugins": ["react", "@typescript-eslint", "jest", "import"],
    "env": { 
         "es2021": true,
         "jest": true,
         "browser": true
    },
    "globals": {
          "Atomics": "readonly",
          "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "rules": {
     "linebreak-style": "off",
     "prettier/prettier": [
       "error",
       {
         "endOfLine": "auto"
       }
     ]
   }
}